<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/borderradius"
    android:backgroundTint="#EEEDEA">

    <TextView
        android:id="@+id/menuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/cairo"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#282828"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pricing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#282828"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/menuname"
        app:layout_constraintStart_toEndOf="@+id/menuname"
        app:layout_constraintTop_toTopOf="@+id/menuname" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/cairo"
        android:text="DA"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#282828"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/pricing"
        app:layout_constraintStart_toEndOf="@+id/pricing"
        app:layout_constraintTop_toTopOf="@+id/pricing" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo"
        android:maxWidth="180dp"
        android:text="TextView"
        android:textColor="#676161"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/menuname"
        app:layout_constraintTop_toBottomOf="@+id/menuname" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="add"
        android:elevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menuimg"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:backgroundTint="@android:color/transparent"
            android:elevation="0dp"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            app:srcCompat="@drawable/pizza" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unliked" />
</androidx.constraintlayout.widget.ConstraintLayout>